alias s='cd ..' # up one dir
alias cls='clear; ls'
alias ls='ls -GFlh'
alias l.='ls -d .[^.]*'
alias l='ls -lhGt' # -l long listing, most recent first
alias rm='rm -iv'
alias mv='mv -i'
alias cp='cp -i'
alias type='type -a'
alias grep='grep --color=auto'
alias cat='cat -en'
alias less='less -N'
alias o='open . &'

alias ungit="find . -name '.git' -exec rm -rf {} \;"
alias gl='git log --graph --oneline'

alias cdgems='cd $(gem environment | grep "INSTALLATION DIRECTORY" | cut -c 29-) && ls'
alias be='bundle exec'
